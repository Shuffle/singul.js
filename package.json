{
  "name": "@singulio/app-auth-search",
  "version": "0.0.3",
  "description": "A cross-framework search bar component for app authentication with Algolia integration",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/app-auth-search/app-auth-search.esm.js",
  "exports": {
    ".": {
      "import": "./dist/app-auth-search/app-auth-search.esm.js",
      "require": "./dist/app-auth-search/app-auth-search.cjs.js"
    },
    "./app-search-bar": {
      "import": "./dist/components/app-search-bar.js",
      "types": "./dist/components/app-search-bar.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "devDependencies": {
    "@stencil/core": "^4.27.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0"
  },
  "license": "MIT",
  "dependencies": {
    "algoliasearch": "^5.27.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
