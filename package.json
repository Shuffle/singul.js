{
  "name": "@singulio/singul",
  "version": "0.1.0",
  "description": "The singul frontend component",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/singul/singul.esm.js",
  "exports": {
    ".": {
      "import": "./dist/singul/singul.esm.js",
      "require": "./dist/singul/singul.cjs.js"
    },
    "./singul-js": {
      "import": "./dist/components/singul-js.js",
      "types": "./dist/components/singul-js.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs.js",
      "types": "./loader/index.d.ts"
    },
    "./react": {
      "import": "./react/index.js",
      "require": "./react/index.js",
      "types": "./react/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue/index.js",
      "require": "./dist/vue/index.js",
      "types": "./dist/vue/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "loader/",
    "react/",
    "README.md"
  ],
  "scripts": {
    "build": "stencil build && npm run build:vue",
    "build:vue": "tsc -p tsconfig.vue.json",
    "start": "stencil build --watch",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "devDependencies": {
    "@stencil/core": "^4.27.1",
    "@stencil/vue-output-target": "^0.11.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "dependencies": {
    "@types/react": "^19.2.7",
    "algoliasearch": "^5.27.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
